{
  // ts config for es 2021
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2019"],
    "outDir": "./dist",
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "noErrorTruncation": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist"]
}